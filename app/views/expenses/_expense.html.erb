<div id="<%= dom_id expense %>" class="w-full flex flex-col relative">
  <div class="flex shadow-lg bg-white m-5 rounded-md">
    <div class="flex justify-center">
      <%= image_tag "Logo.png"%>
    </div>
    <div class="flex flex-col grow justify-center text-slate-500 gap-1">
      <div class="flex justify-between p-2 border-b-slate-50 border-b-4 ">
        <div>
          <%= expense.name %>  
        </div>
        <div class="text-black font-bold">
          $<%= '20.00' %> 
        </div>
      </div>
      <div class="text-xs p-2">
        <%= expense.created_at %>
      </div> 
    </div>
    
  </div>
  

  <% if action_name != "show" %>
    <%= link_to "Show this expense", expense, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this expense', edit_expense_path(expense), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
